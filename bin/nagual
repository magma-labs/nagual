#!/usr/bin/env ruby
require 'nagual'

nagual = Nagual::API.new

if ARGV.first == 'export'
  File.open(nagual.config['output_file'], 'w') do |file|
    file.write(nagual.export(nagual.config['input_file']))
  end
elsif ARGV.first == 'review'
  puts nagual.review(nagual.config['input_file'])
else
  puts 'Command not recognized'
end
