#!/usr/bin/env ruby
require 'nagual'

nagual = Nagual::API.new

if ARGV.first == 'export'
  File.open('data/catalog.xml', 'w') do |file|
    file.write(nagual.transform(:csv, :catalog_xml))
  end
elsif ARGV.first == 'review'
  puts nagual.transform(:csv, :catalog_xml)
else
  puts 'Command not recognized'
end
